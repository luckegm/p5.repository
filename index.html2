let cor
let pH; //x
let pV; //y

function setup() {
  
  createCanvas(800, 800);
  background("purple");
  cor=color(random(0,255),random(0,255),random(0,255));
  pH = 200;
  pV = 200;
}

function draw() {
  
  fill(cor)
  circle(pH, pV, 200) 
  if (mouseX < pH) 
    pH  --
  if (mouseX > pH)
    pH  ++
  if (mouseY < pV)
    pV  --
  if (mouseY > pV)
    pV  ++
  

  
  if(mouseIsPressed) 
cor=color(random(0,255),random(0,255),random(0,255));
}
